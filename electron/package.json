{
  "name": "tachikoma-electron",
  "version": "0.1.0",
  "description": "AI-powered autonomous development environment",
  "author": {
    "name": "Tachikoma Team",
    "email": "team@tachikoma.io",
    "url": "https://github.com/tachikoma"
  },
  "private": true,
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "typecheck": "tsc --noEmit",
    "build:mac": "electron-builder --mac",
    "build:mac:universal": "electron-builder --mac --universal",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --mac --win --linux",
    "build:dir": "electron-builder --dir",
    "package": "npm run build && electron-builder --publish never",
    "release": "electron-builder --publish always",
    "release:mac": "electron-builder --mac --publish always",
    "release:win": "electron-builder --win --publish always",
    "release:linux": "electron-builder --linux --publish always",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run --config vitest.config.electron.ts",
    "test:unit:watch": "vitest --config vitest.config.electron.ts",
    "test:unit:coverage": "vitest run --config vitest.config.electron.ts --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:visual": "playwright test --grep=\"@visual\"",
    "test:performance": "playwright test --grep=\"@performance\"",
    "test:fixtures": "node scripts/test-fixtures.js",
    "dev:all": "concurrently \"npm run dev --prefix ../web\" \"npm run dev\"",
    "sign:windows": "pwsh -File scripts/sign-all-windows.ps1 -Directory dist",
    "sign:windows:single": "pwsh -File scripts/sign-windows.ps1 -FilePath",
    "verify:windows": "pwsh -File scripts/verify-windows-signature.ps1 -FilePath",
    "sign:azure": "pwsh -File scripts/sign-azure-kv.ps1"
  },
  "dependencies": {
    "@electron-toolkit/utils": "^4.0.0",
    "electron-updater": "^6.1.0",
    "uuid": "^13.0.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.0",
    "@electron/notarize": "^3.1.1",
    "@types/node": "^20.10.0",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^4.0.17",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "electron-vite": "^2.0.0",
    "jsdom": "^27.4.0",
    "memfs": "^4.51.1",
    "playwright": "^1.57.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.17",
    "concurrently": "^9.0.0"
  }
}
