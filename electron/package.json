{
  "name": "tachikoma-electron",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "typecheck": "tsc --noEmit",
    "build:mac": "electron-builder --mac",
    "build:mac:universal": "electron-builder --mac --universal",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --mac --win --linux",
    "build:dir": "electron-builder --dir",
    "package": "npm run build && electron-builder --publish never",
    "release": "electron-builder --publish always",
    "release:mac": "electron-builder --mac --publish always",
    "release:win": "electron-builder --win --publish always",
    "release:linux": "electron-builder --linux --publish always"
  },
  "dependencies": {
    "@electron-toolkit/utils": "^4.0.0",
    "electron-updater": "^6.1.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.0",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^4.0.17",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "electron-vite": "^2.0.0",
    "jsdom": "^27.4.0",
    "memfs": "^4.51.1",
    "playwright": "^1.57.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.17"
  }
}
